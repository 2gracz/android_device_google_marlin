on post-fs
    ## ensure correct calibration file permissions
    chown root system /persist/sensorcal.json
    chmod 0640 /persist/sensorcal.json
    ## Update SH FW if needed
    start flash-sh-fw

service flash-sh-fw /system/vendor/bin/sensortool.${ro.hardware} -f /system/vendor/firmware/nano4x1_${ro.hardware}.bin
    oneshot
    disabled
